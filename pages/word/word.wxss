.message{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  height: 65px;
  background: linear-gradient(to right, #ffd700, #fff9c4);
  padding: 10px 0;
}
.message image{
  width: 45px;
  height: 45px;
  margin: 0 15px;
}
.form{
  height: 40vh;
  border: 1px dotted #ffd700;
  display: flex;
  justify-content: center;
  background: linear-gradient(#ffd700, #fff9c4);
  padding: 10px;
  border-radius: 10px;
  gap: 10px;
  transition: all 0.3s ease;
}
.form:hover {
  transform: scale(1.02);
}
.form image{
  height: 100%;
  /* width: 48%; */
  /* border: 1px dotted #ffd700; */
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(255, 215, 0, 0.3);
  transition: all 0.3s ease;
}
.form image:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 15px rgba(255, 215, 0, 0.3);
}
.result {
  width: 90%;
  margin: 20px auto;
  border-radius: 12px;
  background: #fff;
  box-shadow: 0 4px 8px rgba(255, 215, 0, 0.2);
  border: 1px dotted #ffd700;
  padding: 15px;
}
.result-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  padding: 10px;
  border-bottom: 1px dotted #ffd700;
  margin-bottom: 10px;
  text-align: center;
}
.rs {
  display: flex;
  align-items: center;
  padding: 12px;
  border-bottom: 1px dotted #ffd700;
  background: linear-gradient(135deg, #ffd700, #ffeb3b);
  margin: 8px 0;
  border-radius: 6px;
}
.rs:last-child {
  border-bottom: none;
}
.text-content {
  flex: 1;
  line-height: 1.6;
  color: #333;
  font-size: 15px;
}
.text-item {
  display: block;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}
.rs:hover {
  background: rgba(255, 215, 0, 0.1);
}