.search{
  padding: 12px 20px;
  background: linear-gradient(to right, #ffd700, #ffe55c);
}

.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 25px;
  padding: 8px 16px;
  box-shadow: 0 2px 10px rgba(255, 215, 0, 0.2);
  border: 1px solid rgba(255, 215, 0, 0.3);
  height: 40px;
  box-sizing: border-box;
}

/* 使用伪元素添加搜索图标 */
.search-box::before {
  content: "🔍";  
  font-size: 16px;
  margin-right: 8px;
  opacity: 0.7;
}

input {
  flex: 1;
  font-size: 15px;
  color: #333;
  padding: 0;
  min-width: 0;
}

.placeholder-style {
  color: #999;
  font-size: 14px;
  letter-spacing: 1px;
}

/* 搜索区文本录入框 */
.search input{
  height: 100%;
  padding: 0px 20px;
  font-size: 18px;
  width: 72%;
  background: linear-gradient(to right, #ffd700, #ffffff);  /* 黄色到白色的渐变 */
  border-radius: 10px;
}
/* 搜索区图片 */
.search image{
  height: 35px;
  width:35px;
  margin-left: 15px;
  right: 20px;
  z-index: 99;
}

/* 轮播区样式 */
.sw{
  width: 100%;
  height: 333px;     
  padding: 8px 12px;
  box-sizing: border-box;
}
.swiper{
  width: 100%;
  height: 100%;
  border-radius: 12px;
  overflow: hidden;
}
.sw image{
  width: 100%;
  height: 100%;
}
/* 功能 */
.row{
  height: 180px;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin: 10px 15px;
  gap: 15px;
}
.box{  
  width: 47%;
  height: 100%;
  border: 1px dotted #ffd700;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(255, 215, 0, 0.2);
  transition: transform 0.3s ease;
  position: relative;
  overflow: hidden;
}
.box:active {
  transform: scale(0.98);
}
.box image{
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 12px;
}
.txt{
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 0;
  display: flex;
  padding: 0 12px;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  font-weight: bold;
}
.price{
  color: #ffffff;
  font-weight: bold;
  margin-left: 8px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.swiper-item {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.swiper-item:hover {
  transform: scale(1.02);
}

.swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 12px;
}

.swiper-text {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  background: rgba(255, 215, 0, 0.7);  /* 半透明金黄色背景 */
  padding: 5px 15px;
  border-radius: 15px;
  font-size: 16px;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);  /* 文字阴影 */
}

.main {
  width: 100vw;
  min-height: 100vh;
  background: linear-gradient(#ffd700, #fff9c4);
  padding: 0 0 20px 0;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.game-row {
  height: 180px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 15px;
  margin: 10px 0;
  gap: 15px;
}

.game-box {
  width: 47%;
  height: 100%;
  border: 1px dotted #ffd700;
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(255, 215, 0, 0.2);
  transition: transform 0.3s ease;
  position: relative;
  overflow: hidden;
}

.game-box:active {
  transform: scale(0.98);
}

.game-box image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 12px;
}

.game-box .txt {
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 0;
  display: flex;
  padding: 0 12px;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  font-weight: bold;
}

.coming-soon {
  opacity: 0.8;
  position: relative;
}

.coming-soon::after {
  content: "即将推出";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 215, 0, 0.9);
  padding: 8px 16px;
  border-radius: 20px;
  color: #333;
  font-weight: bold;
}

/* 功能框悬停效果 */
.box {  
  transition: all 0.3s ease;
}
.box:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 15px rgba(255, 215, 0, 0.3);
}

/* 游戏框悬停效果 */
.game-box {
  transition: all 0.3s ease;
}
.game-box:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 15px rgba(255, 215, 0, 0.3);
}

/* 搜索框悬停效果 */
.search-box:hover {
  transform: scale(1.02);
  box-shadow: 0 4px 15px rgba(255, 215, 0, 0.3);
}

.search-mode {
  padding: 4px 8px;
  background: #ffd700;
  border-radius: 12px;
  font-size: 12px;
  color: #333;
  margin-left: 8px;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.search-mode:active {
  opacity: 0.8;
}

.bounce-image {
  position: fixed;
  width: 100px;
  height: 100px;
  opacity: 0.8;
  z-index: 100;
  pointer-events: auto;
  left: 0;
  top: 0;
}

.bounce-image image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}